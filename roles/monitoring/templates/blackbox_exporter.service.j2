[Unit]
Description=Prometheus Blackbox Exporter
After=network.target

[Service]
User={{ blackbox_user }}
Group={{ blackbox_user }}
ExecStart=/usr/local/bin/blackbox_exporter --config.file=/etc/blackbox_exporter/config.yml --web.listen-address=0.0.0.0:9115
Restart=always

[Install]
WantedBy=multi-user.target